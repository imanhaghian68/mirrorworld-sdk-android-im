<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_content_line1rv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/mirror_background"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content_line3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_content_line2">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/market_main_filter_detail_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mirror_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content_line2"
        android:background="@color/mirror_background"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_content_line1rv"
        >

        <com.mirror.sdk.ui.market.widgets.MirrorExpandedButton
            android:id="@+id/market_main_filter_order_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.mirror.sdk.ui.market.widgets.MirrorExpandedButton>

        <com.mirror.sdk.ui.market.widgets.MirrorExpandedButton
            android:id="@+id/market_main_filter_button"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/market_main_filter_order_button"
            app:layout_constraintTop_toTopOf="parent">

        </com.mirror.sdk.ui.market.widgets.MirrorExpandedButton>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.mirror.sdk.ui.market.widgets.NFTRecyclerView
        android:id="@+id/main_nft_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:background="@color/mirror_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_content_line2" />

    <com.mirror.sdk.ui.market.widgets.MainFilterDetailLayout
        android:id="@+id/market_main_filter_expand_parent"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:background="@color/dDVTransparentGray"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_content_line2">

    </com.mirror.sdk.ui.market.widgets.MainFilterDetailLayout>
</androidx.constraintlayout.widget.ConstraintLayout>