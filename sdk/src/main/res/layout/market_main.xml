<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Platform.MaterialComponents.Light">

    <com.mirror.sdk.ui.market.widgets.MarketMainScrollView
        android:id="@+id/market_main_content_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id = "@+id/market_main_content_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <SearchView
                android:id="@+id/market_main_searchview"
                android:background="@color/mirror_background"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

            </SearchView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/market_main_type_parent"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/market_main_searchview"
                android:background="@color/mirror_background"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/market_main_filter_parent"
                android:background="@color/mirror_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/market_main_type_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/market_main_filter_buttons_parent"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.mirror.sdk.ui.market.widgets.MirrorExpandedButton
                        android:id="@+id/market_main_filter_order_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </com.mirror.sdk.ui.market.widgets.MirrorExpandedButton>

                    <com.mirror.sdk.ui.market.widgets.MirrorExpandedButton
                        android:id="@+id/market_main_filter_button"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/market_main_filter_order_button"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="20dp">

                    </com.mirror.sdk.ui.market.widgets.MirrorExpandedButton>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/market_main_filter_detail_parent"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@id/market_main_filter_buttons_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/market_main_filter_detail_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/market_main_nft_list"
                android:layout_width="match_parent"
                android:layout_height="900dp"
                android:background="@color/mirror_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/market_main_filter_parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/market_main_filter_expand_parent"
                android:layout_width="match_parent"
                android:layout_height="900dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/dDVTransparentGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/market_main_filter_parent"
                android:visibility="gone">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.mirror.sdk.ui.market.widgets.MarketMainScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>