<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:background="@color/mirror_filter_button_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/mirror_filter_button_gray"
        android:layout_alignParentTop="true"
        android:layout_height="58dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_icon_refresh"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_icon_refresh"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/mirror_pure_white"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_icon_solana"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
           android:text="0.217"
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="@color/mirror_black"
            android:layout_marginLeft="75dp"/>



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp">
            <Button
                android:layout_width="224dp"
                android:layout_height="60dp"
                android:background="#386EEC"
                android:text="Buy"
                android:textSize="18dp"
                android:textColor="@color/mirror_pure_white"
               />
        </androidx.cardview.widget.CardView>





    </RelativeLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/mutiple_recyclerview"
        android:background="@color/mirror_filter_button_gray"
        android:layout_marginBottom="90dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/custom_tabs_root"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="57dp"
        android:background="@color/mirror_background_color">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="match_parent"

            android:id="@+id/mutiple_position_tabs"
          >

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.appcompat.widget.LinearLayoutCompat>



</RelativeLayout>

